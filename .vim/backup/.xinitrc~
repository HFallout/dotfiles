#!/bin/sh
#
# ~/.xinitrc
#
# Executed by startx (run your window manager from here)

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

xrdb -merge ~/.Xresources

case $1 in
xfce4)
        synapse &
	exec startxfce4
	;;
wmii)
	exec wmii
	;;
openbox)
        synapse &
	exec openbox-session
	;;
gnome)
	exec gnome-session
	;;
awesome|*)
        synapse &
	exec awesome
	;;
esac
